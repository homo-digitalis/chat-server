{
  "name": "@homo-digitalis/chat-server",
  "version": "0.3.0",
  "description": "As simple as it gets",
  "main": "./dist/index.js",
  "typings": "./dist/index.js",
  "scripts": {
    "start-old": "export NODE_ENV=\"Production\" && node dist/chat-server.js 3000",
    "pm2-start": "export NODE_ENV=\"Production\" && pm2 start src/chat-server.ts --name chat-server",
    "start": "export NODE_ENV=\"Production\" && ts-node src/chat-server.ts 443",
    "test": "jest",
    "test:cov": "jest --coverage",
    "tslint": "tslint -p ./",
    "bp": "npm run tslint && rm -rf ./dist && rm -rf ./node_modules && npm i --save && tsc && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/homo-digitalis/chat-server"
  },
  "keywords": [
    "Chat Server",
    "Chat Server based on socket.io",
    "Realtime Chat"
  ],
  "author": "Homo Digitalis",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run tslint"
    }
  },
  "dependencies": {
    "@types/express": "^4.16.1",
    "@types/helmet": "0.0.41",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "express": "^4.16.4",
    "helmet": "^3.15.1",
    "homo-digitalis": "^3.0.0",
    "homo-digitalis-curricula-service": "^0.5.0",
    "https-provider": "^0.3.0",
    "jest": "^24.0.0",
    "nlp-trainer": "^3.1.0",
    "nlp-with-actions": "^3.4.0",
    "redirect-https": "^1.3.0",
    "socket.io": "^2.2.0",
    "socketio-auth": "^0.1.1",
    "ts-jest": "^23.10.5"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  }
}